{
  "compilerOptions": {
    "incremental": false,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "rootDirs": ["./src", "src/tools/TypeAlias", "./src/routes", "."],
    "typeRoots": ["src/@types", "node_modules/@types"],
    "baseUrl": "./src",
    "outDir": "./built",
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noLib": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/bin/*.ts",
    "src/config/*.ts",
    "src/routes/*.ts",
    "src/routes/*/*.ts",
    "src/tools/**/*.ts",
    "src/bin/*.ts",
    "src/*.ts",
    "src/tools/TypeAlias/*.ts",
    "src/app.ts",
    "src/public/javascripts/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "素材/*",
    "built/*",
    "assets/alpha/routes/alpha/*/*"
  ]
}

<script>
  const item_name = document.getElementById('item_name');
  const item_price = document.getElementById('item_price');
  const item_count = document.getElementById('item_count');
  //WIndow読み込み時に値をセットする
  window.onload = function () {
    
    //cookieから、"char_num"という名前のcookieを取得する
    const char_num = document.cookie.replace(/(?:(?:^|.*;\s*)char_num\s*\=\s*([^;]*).*$)|^.*$/, "$1");
    item_name.value = document.getElementById('item_name_i').innerText;
    // item_name.value = 'なんかすごいやつ';
    item_price.value = document.getElementById('item_price_i').innerText.slice(1);
    // item_price.value = '¥1';
    item_count.value = document.getElementById('item_count_input').value;
    // item_count.value = '334個';
    //Cookieからuser_idを取得し、user_nameにセットする
    const total_amount = document.getElementById('item_total_i');
    const item_price_i = document.getElementById('item_price_i').innerText.slice(1);
    const item_count_i = document.getElementById('item_count_input').value;
    const total_amount_i = item_price_i * item_count_i;
    total_amount.innerText = '¥' + total_amount_i;
  }
  //item_count_inputの値が変更されたら、total_amountを更新する
  document.getElementById('item_count_input').addEventListener('change', function () {
    const total_amount = document.getElementById('item_total_i');
    const item_price_i = document.getElementById('item_price_i').innerText.slice(1);
    const item_count_i = document.getElementById('item_count_input').value;
    const total_amount_i = item_price_i * item_count_i;
    total_amount.innerText = '¥' + total_amount_i;
    item_count.value = document.getElementById('item_count_input').value;
  });
  //item_count_inputの値に0以下の値を許容しない
  document.getElementById('item_count_input').addEventListener('input', function () {
    const item_count_input = document.getElementById('item_count_input');
    if (item_count_input.value <= 0) {
      item_count_input.value = 1;
    }
  });
</script>


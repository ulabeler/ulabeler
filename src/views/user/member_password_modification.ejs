    <%- include("../components/sidemenu.ejs", {side_menu: side_menu}) %>

      <article>
        <div class="box09">

          <!-- 入力フォーム -->
          <form action="" method="post" id="hoge">
            <div class="login_input">
              <div class="input_center">
                <p>現在のパスワード<font color="red">*</font>　　　　　　:　<input type="password" name="" size="35"
                    class="CurrentPassword" placeholder="現在使用中のパスワードを入力してください。"></p>

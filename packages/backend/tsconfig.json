{
	"compilerOptions": {
		"incremental": false,
		"target": "ESNext",
		"module": "NodeNext",
		"allowJs": false,
		"rootDir": "src",
		"typeRoots": ["src/@types", "node_modules/@types"],
		"baseUrl": ".",
		"outDir": "./built",
		"declaration": true,
		"removeComments": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"noImplicitReturns": true,
		"resolveJsonModule": true,
		"noLib": false,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"paths": {
			"@/*": ["src/*"],
			"@modules/*": ["src/modules/*"],
			"@config/*": [".config/*"],
			"@utils/*": ["src/utils/*"],
			"@types/*": ["src/types/*"],
			"@routes/*": ["src/routes/*"],
			"@cleintBuilt/*": ["../client/dist/*"]
		}
	},
	"include": ["./src/**/*.ts"]
}
